{
    "compilerOptions": {
      "strictNullChecks": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": true,
      "target": "es2020",
      "lib": ["es2020", "dom"]
    },
    "files": ["src/index.ts"],
    "include": ["src/**/*.ts", "src/**/*.json"],
    "exclude": ["node_modules", "dist/*"]
  }
